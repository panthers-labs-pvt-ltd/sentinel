<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="postgres" targetRuntime="MyBatis3DynamicSql">
        <!-- 1. Plugins FIRST -->
        <plugin type="com.softwareloop.mybatis.generator.plugins.LombokPlugin"/>

        <commentGenerator>
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>

        <!-- 2. Database Connection -->
        <jdbcConnection
                driverClass="org.postgresql.Driver"
                connectionURL="${database.url}"
                userId="${database.username}"
                password="${database.password}"/>

        <!-- 3. Model/Client Generators -->
        <javaModelGenerator
                targetPackage="org.pantherslabs.chimera.sentinel.datahub.api.model.generated"
                targetProject="src/main/java"/>

        <!-- 4. Mapper Generators -->
        <javaClientGenerator
                type="ANNOTATEDMAPPER"
                targetPackage="org.pantherslabs.chimera.sentinel.datahub.api.mapper.generated"
                targetProject="src/main/java"/>

        <table schema="public" tableName="metadata_aspect_v2" delimitIdentifiers="true"/>
        <table schema="public" tableName="latest_metadata_aspect_v2" delimitIdentifiers="true"/>

    </context>
</generatorConfiguration>

